{
  "compilerOptions": {
    "strictNullChecks": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@src/*": ["../src/*"],
      "@test/*": ["../test/*"],
    }
  },
  "include": ["src", "tests"],
  "exclude": []
}