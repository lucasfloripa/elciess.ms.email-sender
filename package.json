{
  "name": "elciess.ms.email-sender",
  "version": "1.0.0",
  "description": "API to send emails.",
  "author": "Lucas Gon√ßalves",
  "repository": "https://github.com/lucasfloripa/elciess.cron.email-sender",
  "scripts": {
    "start:dev": "NODE_ENV=dev nodemon --watch './**/*.ts' --exec ts-node ./src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watchAll -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-e2e.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.2",
    "@types/jest": "^29.2.5",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "commitlint": "^17.4.2",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint 'src/**' --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "kafkajs": "^2.2.3",
    "nodemailer": "^6.9.1"
  }
}
